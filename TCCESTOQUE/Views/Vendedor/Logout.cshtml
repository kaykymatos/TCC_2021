@model TCCESTOQUE.Models.VendedorModel

@{
    ViewData["Title"] = "- Encerrar sessão";
}

<h1>Desconectar</h1>

<h4>Vendedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Logout">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="VendedorId" />
                <input type="submit" value="Sair" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index" class="btn-voltar">
        Voltar ao menu
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
