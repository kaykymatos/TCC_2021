@model TCCESTOQUE.Models.VendaModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Print</title>
</head>
<body>

    <div>

        <div>
            <h4>Venda</h4>
            <hr />
            <dl class="row Detalhes">

                <dt class="col-sm-2 DetalhesHeader">
                    @Html.DisplayNameFor(model => model.DataVenda)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataVenda)
                </dd>

                <dt class="col-sm-2 DetalhesHeader">
                    @Html.DisplayNameFor(model => model.Vendedor)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Vendedor.Nome)
                </dd>

                <dt class="col-sm-2 DetalhesHeader">
                    @Html.DisplayNameFor(model => model.Cliente)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Cliente.Nome)
                </dd>
            </dl>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Código
                    </th>
                    <th>
                        Produto
                    </th>
                    <th>
                        Quantidade
                    </th>
                    <th>
                        Data da venda
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int numero = 1;
                    foreach (var item in Model.Itens)
                    {
                        if (item.VendaId == Model.VendaId)
                        {
                            <tr>
                                <td>
                                    @numero
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Produto.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantidade)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PrecoProduto)
                                </td>
                                <td>
                                    @( (item.PrecoProduto * item.Quantidade).ToString("###,##0.00") )
                                </td>

                            </tr>
                            numero += 1;
                        }
                    }
                }
                <tr>
                    <td colspan="3">Total</td>
                    <td>
                        @Model.Valor();
                    </td>

                </tr>
            </tbody>
        </table>
        <div>
            <a asp-action="Index"><svg xmlns="http://www.w3.org/2000/svg" width="50" height="25" fill="currentColor" class="bi bi-arrow-left-square-fill" viewBox="0 0 16 16">
  <path d="M16 14a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12zm-4.5-6.5H5.707l2.147-2.146a.5.5 0 1 0-.708-.708l-3 3a.5.5 0 0 0 0 .708l3 3a.5.5 0 0 0 .708-.708L5.707 8.5H11.5a.5.5 0 0 0 0-1z"/>
</svg></a>
        </div>



    </div>
</body>
</html>
