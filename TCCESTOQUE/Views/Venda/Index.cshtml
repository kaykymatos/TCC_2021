@model IEnumerable<TCCESTOQUE.Models.VendaModel>

@{
    ViewData["Title"] = "- Vendas";
    Layout = "~/Views/Shared/_Layout-Interno.cshtml";
}

<h1>Historico de vendas</h1>

<table class="tabela">
    <thead>
        <tr>
            <th>
                Código
            </th>
            <th class="mb-visivel">
                Valor
            </th>

            <th class="mb-visivel">
                Data
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vendedor)
            </th>
            <th class="mb-visivel">
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="Lista">
        @{
            int numero = Model.Count();
            foreach (var item in Model)
            {
                var estiloTr = "";
                if (item.Cancelada) { estiloTr = "cancelada"; }
                <tr class="@estiloTr">
                    <td>
                        @numero
                    </td>
                    <td class="mb-visivel">
                        @item.Valor()
                    </td>
                    <td class="mb-visivel">
                        @item.PegarData(item.DataVenda)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vendedor.Nome)
                    </td>
                    <td class="mb-visivel">
                        @Html.DisplayFor(modelItem => item.Cliente.Nome)
                    </td>
                    <td class="opcoes">
                        <a title="Detalhes" asp-action="Details" asp-route-id="@item.VendaId">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-card-list" viewBox="0 0 16 16">
                                <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"></path>
                                <path d="M5 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 5 8zm0-2.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm0 5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm-1-5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zM4 8a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zm0 2.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z"></path>
                            </svg>
                        </a>
                        @if (!item.Cancelada)
                        {
                            <span></span>
                            <a Links" title="Deletar" asp-action="Delete" asp-route-id="@item.VendaId">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                                </svg>
                            </a>
                        }
                    </td>
                </tr>
                numero -= 1;
            }
        }
    </tbody>
</table>
